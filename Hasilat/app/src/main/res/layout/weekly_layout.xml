<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/weeklyProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haftalık Sıralama"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:background="@drawable/grey_cell_shape"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="#"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold" />

                        <TextView
                            android:background="@drawable/grey_cell_shape"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Film Adı"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold" />

                        <TextView
                            android:background="@drawable/grey_cell_shape"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Dağıtım"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold" />

                        <TextView
                            android:background="@drawable/grey_cell_shape"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Vizyon Tarihi"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold" />

                        <TextView
                            android:background="@drawable/grey_cell_shape"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Hafta Seyirci"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold" />

                        <TextView
                            android:background="@drawable/grey_cell_shape"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="% Toplam"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold" />

                        <TextView
                            android:background="@drawable/grey_cell_shape"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Salon"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold" />

                        <TextView
                            android:background="@drawable/grey_cell_shape"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Salon Ort."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold" />

                        <TextView
                            android:background="@drawable/grey_cell_shape"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Toplam Seyirci"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold" />

                    </TableRow>

                </TableLayout>

            </HorizontalScrollView>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>